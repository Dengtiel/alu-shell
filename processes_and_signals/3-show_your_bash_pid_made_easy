#!/usr/bin/env bash
# This script displays the PID and process name of processes containing the word "bash"

for pid in /proc/[0-9]*; do
    if [ -d "$pid" ]; then
        cmdline=$(tr '\0' ' ' < "$pid/cmdline" 2>/dev/null) # Read the command line without cat
        if [[ "$cmdline" == *bash* ]]; then
            echo "$(basename "$pid") $cmdline"
        fi
    fi
done
