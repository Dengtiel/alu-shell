#!/usr/bin/env bash
# This script kills the 7-highlander process.

# Get the PID of the 7-highlander process
PID=$(pgrep -f "7-highlander")

if [ -z "$PID" ]; then
  exit 0  # Do nothing if no process found
fi

# Kill the process using SIGKILL (-9)
sudo kill -9 "$PID"

# Sleep for a moment to ensure termination
sleep 2

# Check if the process is still running
if pgrep -f "7-highlander" > /dev/null; then
  exit 1  # Exit with a non-zero status if the process is still running
else
  echo "OK"  # Only print "OK" as expected
fi
