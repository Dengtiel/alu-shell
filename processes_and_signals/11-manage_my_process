#!/usr/bin/env bash
# This script manages the manage_my_process background process.

PIDFILE="/var/run/my_process.pid"

start() {
    if [ -f "$PIDFILE" ]; then
        echo "manage_my_process is already running."
        exit 1
    fi
    
    ./manage_my_process &           # Ensure this path is correct
    echo $! > "$PIDFILE"           # Store the PID
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PIDFILE" ]; then
        kill "$(cat "$PIDFILE")" && rm -f "$PIDFILE"  # Quote the command substitution
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running."
    fi
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac

