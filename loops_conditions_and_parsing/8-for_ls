#!/usr/bin/env bash
# This script displays the content of the current directory, showing only the part of the name after the first dash.

# Check if there are any files with dashes
found_files=false

for file in *-*; do
    # Check if the file exists and is not a hidden file
    if [ -e "$file" ]; then
        name="${file#*-}"  # Get the part after the first dash
        echo "$name"
        found_files=true
    fi
done

# If no files with a dash were found, display a message
if [ "$found_files" = false ]; then
    echo "No files found with a dash."
fi
